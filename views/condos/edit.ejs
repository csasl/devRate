<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= condo.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/condos/<%= condo._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="condo[name]" value="<%= condo.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="condo[developer]" value="<%= condo.developer %>">
                </div>
				 <div class="form-group">
                    <input class="form-control" type="text" name="condo[address]" value="<%= condo.address %>">
                </div>
				 <div class="form-group">
                    <input class="form-control" type="text" name="condo[postalCode]" value="<%= condo.postalCode %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="condo[image]" value="<%= condo.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="condo[rent]" value="<%= condo.rent %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/condo">Go Back</a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>