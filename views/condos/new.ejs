<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
		
		<h1 style="text-align:center">
			Add a new condo
		</h1>

		<div style= "width:30%; margin: 30px auto">
			<form action="/condos" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="address" placeholder="Adress">
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="postalCode" placeholder="Postal code">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="developer" placeholder="Developer">
				</div>
				
				<div class="form-group">
					<input class="form-control" type="number" name="rent" placeholder="Rent/month" min="0.01" step="0.01">
				</div>
				
				
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="image URL">
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
				</div>

			</form>	
			<a href="/condos">Go back</a>
		</div>

	</div>


</div>

<%- include ("../partials/footer") %>
