<%- include ("../partials/header") %>


	<div class="row">
		
		<h1 style="text-align:center">
			Add a new condo
		</h1>

		<div style= "width:30%; margin: 30px auto">
			<form action="/condos" method="POST">
				<div class="form-group">
					<label for = "name">Condo Name</label>
					<input class="form-control" type="text" name="name" id="name" placeholder="Name">
				</div>
				<div class="form-group">
					<label for="location">Street Address</label>
					<input class="form-control" type="text" name="location" id="location" placeholder="Adress">
				</div>
				
				<div class="form-group">
					<label for="postalCode">Postal Code</label>
					<input class="form-control" type="text" name="postalCode" id="postalCode" placeholder="Postal code">
				</div>

				<div class="form-group">
					<label for="developer">Condo Developer</label>
					<input class="form-control" type="text" name="developer" id="developer" placeholder="Developer">
				</div>
				
				<div class="form-group">
					<label for="rent">Aproximate rent per month</label>
					<input class="form-control" type="number" name="rent" id="rent" placeholder="0.00" min="0.01" step="0.01">
				</div>
				
				<div class="form-group">
					<label class="control-label">Condo ameneties:</label>
					<div class="checkbox">
						<label><input type="checkbox" name="amenities" value="pool">Pool</label>					
					</div>
					<div class="checkbox">
						<label><input type="checkbox" name="amenities" value="gym">Gym</label>					
					</div>
					<div class="checkbox">
						<label><input type="checkbox" name="amenities" value="retail">Retail</label>					
					</div>
					<div class="checkbox">
						<label><input type="checkbox" name="amenities" value="concierge">Concierge</label>					
					</div>
					<div class="checkbox">
						<label><input type="checkbox" name="amenities" value="bike-locker">Bike locker</label>					
					</div>
					<div class="checkbox">
						<label><input type="checkbox" name="amenities" value="rooftop">Rooftop terrace</label>					
					</div>
					<div class="checkbox">
						<label><input type="checkbox" name="amenities" value="none">None of the above</label>					
					</div>
				</div>
				
				<div class="form-group">
					<label class="control-label">Pet friendly:</label>
					<div class="radio">
						<label><input type="radio" name="petFriendly" value=true>Yes</label>
					</div>
					<div class="radio">
						<label><input type="radio" name="petFriendly" value=false>No</label>
					</div>
				</div>
				
				<div class="form-group">
					<label for="image">Upload a cover image</label>
					<input class="form-control" type="text" name="image" id="image" placeholder="image URL">
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
				</div>

			</form>	
			<a href="/condos">Go back</a>
		</div>

	</div>




<%- include ("../partials/footer") %>
